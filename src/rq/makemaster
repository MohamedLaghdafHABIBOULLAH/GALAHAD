#  Main body of the installation makefile for all the GALAHAD RQ packages

#  Nick Gould, for GALAHAD productions 
#  This version: 2021-05-25

#  ===========================================================================
#  ====================  package-dependent parts  ============================
#  ===========================================================================

#  package section name

package = all_rq
PACKAGE = ALL_RQ

#  auxililiary packages that current package depends on (prepend with make_)

DEPENDENCIES = make_sls_deps make_sls make_roots make_norms \
               make_lmt make_qpt make_rand make_gltr \
               make_glrt make_lstr make_lsrt make_l2rt \
               make_ir make_mop make_ir make_trs make_rqs make_dps 

#  other packages that depend on package

DEPENDS =

#  auxililiary packages that are needed for tests (prepend with make_)

TESTDEPS =

#  all packages in the RQ section

PACKAGES = ir trs rqs dps gltr glrt lstr lsrt l2rt

#  ===========================================================================
#  =================  end of package-dependent parts  ========================
#  ===========================================================================

#  include standard GALAHAD makefile definitions
 
include $(GALAHAD)/src/makedefs/definitions

#  compilation agenda for package

S$(PACKAGE) = $(DEPENDENCIES) $(CLGS)($(package).o)
D$(PACKAGE) = $(DEPENDENCIES) $(CLGD)($(package).o)

#  compilation and run agenda

$(PACKAGE)OBJECTSS = $(S$(PACKAGE))
$(PACKAGE)OBJECTSD = $(D$(PACKAGE))

#  =========================================================================
#  ========================== makefile stanza ==============================
#  =========================================================================

#  main compilations and runs

all: $(package)

#  silent package

$(package)_silent: $(package)_silent_$(PRECIS)
$(package)_silent_single: $(DEPENDENCIES)
$(package)_silent_double: $(DEPENDENCIES)

#  package

$(package): $(package)_$(PRECIS)
$(package)_single: $(DEPENDENCIES)
	$(RANLIB) $(LGS)
$(package)_double: $(DEPENDENCIES)
	$(RANLIB) $(LGD)

#  book keeping

clean:
	@printf ' %-9s\t\t' "Removing $(package) files"
	$(RMARFILES) $(PACKAGES)
	@printf '[ OK ]\n'

cleanall:
	@printf ' %-14s\t\t' \
          "Removing all $(PRECIS) precision object and module files"
	$(RM) $(OBJ)/* $(MOD)/*
	@printf '[ OK ]\n'

#  include required package intermediaries
 
include $(GALAHAD)/src/makedefs/intermediaries

