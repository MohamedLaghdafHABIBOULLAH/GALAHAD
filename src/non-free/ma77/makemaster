                    $(RM) hsl_ma77d_ciface.f90 hsl_ma77d_ciface.o
	$(CRMARFILE) sls_ciface.o
	$(MVMODS)
	$(RANLIB) $(HCLG)
	@printf '[ OK ]\n'

