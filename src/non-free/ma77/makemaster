	cd $(OBJ); $(FORTRAN) -o hsl_ma54s.o $(FFLAGS) hsl_ma54s.f90
	cd $(OBJ); $(HARR) hsl_ma54s.o ; $(RM) hsl_ma54s.f90 hsl_ma54s.o
	$(HRMARFILES) hsl_ma77s.o
	$(MVMODS)
	@printf '[ OK ]\n'

hsl_ma54d.o: $(HLG)(hsl_ma54d.o)

