#  ===========================================================================
#  ====================  package-dependent parts  ============================
#  ===========================================================================

#  package name

package = sls
PACKAGE = SLS

#  auxililiary packages that current package depends on (prepend with make_)

DEPENDENCIES = make_basics make_ma57v4 make_sils make_mc61 make_mc64 \
               make_mc68 make_mc77 make_ma77 make_ma86 make_ma87 \
               make_ma97 make_$(SSIDS)

#  other packages that depend on package

DEPENDS = psls sbls cro fdc rqs trs 

#  auxililiary packages that are needed for tests (prepend with make_)

TESTDEPS = make_copyright make_cutest_functions

#  remove out-of-core direct-access files

RMOOC = $(RM) factor_integer_ooc* factor_real_ooc* \
              work_indefinite_ooc work_real_ooc

#  ===========================================================================
#  =================  end of package-dependent parts  ========================
#  ===========================================================================

#  include standard GALAHAD makefile definitions
 
include $(GALAHAD)/src/makedefs/definitions

#  include required package intermediaries
 
include $(GALAHAD)/src/makedefs/intermediaries

#  include compilation and run instructions
 
include $(GALAHAD)/src/makedefs/instructions
